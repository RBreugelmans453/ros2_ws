<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename="inertial_macros.xacro"/>
    <xacro:macro name="waveshare_real" params="prefix">

    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>
    
    <link name="${prefix}base_link">
    </link>

    <joint name="${prefix}chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis_link"/>
        <origin xyz="-0.043 0.0 -0.0063"/>
    </joint>

    <link name="${prefix}chassis_link">
        <visual>
            <origin xyz="0.0915 0.0 0.02735"/>
            <geometry>
                <box size="0.183 0.083 0.0547"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0.0915 0 0.02735"/>
            <geometry>
                <box size="0.183 0.083 0.0547"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.66" x="0.183" y="0.083" z="0.0547">
            <origin xyz="0.0915 0 0.02735" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <gazebo reference="${prefix}chassis_link">
        <material>Gazebo/White</material>
    </gazebo>

    <joint name="${prefix}lrw_joint" type="continuous">
        <parent link="base_link"/>
        <child link="lrw_link"/>
        <origin xyz="0.0 0.06275 0.0" rpy="-1.5708 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="${prefix}lrw_link">
        <visual>
            <geometry>
                <cylinder length="0.0425" radius="0.04"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.04" length="0.0425"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.05" length="0.0425" radius="0.04">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="${prefix}lrw_link">
        <material>Gazebo/Blue</material>
        <mu1 value="0.4"/>
        <mu2 value="0.4"/>
    </gazebo>

    <joint name="${prefix}rrw_joint" type="continuous">
        <parent link="base_link"/>
        <child link="rrw_link"/>
        <origin xyz="0.0 -0.06275 0.0" rpy="1.5708 0 0"/>
        <axis xyz="0 0 -1"/> 
    </joint>

    <link name="${prefix}rrw_link">
        <visual>
            <geometry>
                <cylinder length="0.0425" radius="0.04"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.04" length="0.0425"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.05" length="0.0425" radius="0.04">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="${prefix}rrw_link">
        <material>Gazebo/Blue</material>
        <mu1 value="0.4"/>
        <mu2 value="0.4"/>
    </gazebo>

    <joint name="${prefix}lfw_joint" type="continuous">
        <parent link="base_link"/>
        <child link="lfw_link"/>
        <origin xyz="0.097 0.06275 0.0" rpy="-1.5708 0 0"/>
        <axis xyz="0 0 1"/> 
    </joint>

    <link name="${prefix}lfw_link">
        <visual>
            <geometry>
                <cylinder length="0.0425" radius="0.04"/>
            </geometry>
            <material name="orange"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.04" length="0.0425"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.05" length="0.0425" radius="0.04">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="${prefix}lfw_link">
        <material>Gazebo/Orange</material>
        <mu1 value="0.4"/>
        <mu2 value="0.4"/>
    </gazebo>

    <joint name="${prefix}rfw_joint" type="continuous">
        <parent link="base_link"/>
        <child link="rfw_link"/>
        <origin xyz="0.097 -0.06275 0.0" rpy="1.5708 0 0"/>
        <axis xyz="0 0 -1"/> 
    </joint>

    <link name="${prefix}rfw_link">
        <visual>
            <geometry>
                <cylinder length="0.0425" radius="0.04"/>
            </geometry>
            <material name="orange"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.04" length="0.0425"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.05" length="0.0425" radius="0.04">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="rfw_link">
        <material>Gazebo/Orange</material>
        <mu1 value="0.4"/>
        <mu2 value="0.4"/>
    </gazebo>
    </xacro:macro>
</robot>